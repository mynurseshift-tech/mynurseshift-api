datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  firstName     String
  lastName      String
  phone         String?
  password      String
  role          Role      @default(USER)
  status        Status    @default(PENDING)
  position      String?
  workingHours  Json?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  // Relations
  service       Service?  @relation(fields: [serviceId], references: [id])
  serviceId     Int?
  supervisor    User?     @relation("UserSupervisor", fields: [supervisorId], references: [id])
  supervisorId  Int?
  subordinates  User[]    @relation("UserSupervisor")
}

model Pole {
  id          Int       @id @default(autoincrement())
  name        String
  code        String    @unique
  description String
  status      Status    @default(ACTIVE)
  services    Service[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Service {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  capacity    Int
  status      Status    @default(ACTIVE)
  pole        Pole      @relation(fields: [poleId], references: [id])
  poleId      Int
  users       User[]    // Relation avec les utilisateurs du service
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum Role {
  ADMIN       // Cadre de sant√©
  SUPERADMIN  // Administration
  USER        // Infirmier
}

enum Status {
  ACTIVE
  INACTIVE
  PENDING
  REJECTED
}
